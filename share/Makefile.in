PREFIX	= $(bmake_PREFIX)
CFLAGS	= $(bmake_CFLAGS) -g -O2 
LDFLAGS = $(bmake_CLFLAGS)
CC	= $(bmake_CC)
LD	= $(bmake_LD)

all: 

sinclude sources.mk
sinclude src/deps/*

%.o: %.c Makefile
	@if [ ! -d "$(@D)/deps" ] ; then mkdir "$(@D)/deps" ; fi
	$(CC) $(CFLAGS) -MD -MP -MF $(@D)/deps/$(@F).dep -c $< -o $@

clean:

maintainer-clean: clean
	$(bmake_clean)
	rm -rf $(DEPDIRS)

Makefile: Makefile.in configure sources
	@echo "rebuilding makefile"
	$(bmake_reconfigure)

Makefile.in:

sources:

configure: mktests/*
	@touch configure

dist:

.PHONY: all clean maintainer-clean dist
