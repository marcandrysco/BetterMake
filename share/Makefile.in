PREFIX	= $(bmake_PREFIX)
CFLAGS	= $(bmake_CFLAGS) -g -O2 
LDFLAGS = $(bmake_LDFLAGS)
CC	= $(bmake_CC)
LD	= $(bmake_LD)

all: bmake_all 

check: test

test: bmake_test

bmake_all:

bmake_test:

install: bmake_install

clean: bmake_clean

maintainer-clean: clean
	$(bmake_clean)
	rm -f Makefile config.status sources.mk

sinclude user.mk
sinclude sources.mk

Makefile: Makefile.in configure $(wildcard mktests/*) $(wildcard config.args) $(wildcard sources)
	@echo "rebuilding makefile"
	./config.status

Makefile.in:

configure:
	@touch configure

config.args:

sources:

dist:

.PHONY: all clean maintainer-clean check test dist
